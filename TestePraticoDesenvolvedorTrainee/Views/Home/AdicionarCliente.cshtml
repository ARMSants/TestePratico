@model TestePraticoDesenvolvedorTrainee.Models.Cliente
@{
    ViewBag.Title = "AdicionarCliente";
}

<div class="modal-dialog modal-lg">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Novo Cliente</h4>
        </div>
        <div class="modal-body">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = " form-horizontal", role = "form", @id = "Cliente" }))
            {
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(m=>m.Identificador)
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Nome)
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.CPF)
                    @Html.TextBoxFor(m => m.CPF, new { @class = "form-control cpf" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.RG)
                    @Html.TextBoxFor(m => m.RG, new { @class = "form-control rg" })
                </div>
                <div class="col-md-6">
                    @Html.Label("Data de Nascimento")
                    @Html.TextBox("DataNascimento", "", new { @class = "form-control date now-datepicker", autocomplete = "off" })
                </div>
            </div>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-md btn-primary" onclick="SalvarCliente()"><i class="fa fa-plus"></i> Salvar</button>
            <button type="button" class="btn btn-md btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> Fechar</button>
        </div>
    </div>
</div>
