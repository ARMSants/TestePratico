@model TestePraticoDesenvolvedorTrainee.Models.Cliente
@{
    ViewBag.Title = "EditarCliente";
}

<div class="modal-dialog modal-lg">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">@Model.Nome</h4>
        </div>
        <div class="modal-body">

            <div class="panel panel-default tabs nav-tabs-justified">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab1" id="op" data-toggle="tab">Informações</a></li>
                    <li class=""><a href="#tab2" id="end" data-toggle="tab">Endereços</a></li>
                    <li class=""><a href="#tab3" id="lj" data-toggle="tab">Lojas</a></li>
                </ul>
                <div class="panel-body tab-content">
                    <div class="tab-pane active" id="tab1">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = " form-horizontal", role = "form", @id = "Cliente" }))
                        {
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            @Html.HiddenFor(m => m.Identificador)
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.LabelFor(m => m.Nome)
                                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                                </div>
                                <div class="col-md-6">
                                    @Html.LabelFor(m => m.CPF)
                                    @Html.TextBoxFor(m => m.CPF, new { @class = "form-control cpf" })
                                </div>
                                <div class="col-md-6">
                                    @Html.LabelFor(m => m.RG)
                                    @Html.TextBoxFor(m => m.RG, new { @class = "form-control rg" })
                                </div>
                                <div class="col-md-6">
                                    @Html.Label("Data de Nascimento")
                                    @Html.TextBoxFor(m => m.DataNascimento, new { @class = "form-control date now-datepicker", autocomplete = "off" })
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-md btn-primary" onclick="SalvarCliente()"><i class="fa fa-plus"></i> Salvar</button>
                            </div>
                        }
                    </div>
                    <div class="tab-pane" id="tab2">
                        <div class="row" id="addEndereco">
                            @Html.Action("AdicionarEndereco", "Home")
                        </div>
                        <hr />
                        <div class="row" id="lstEnderecos">
                            <table class="table table-bordered table-striped table-condensed dataTable">
                                <thead>
                                    <tr>
                                        <th> Ações </th>
                                        <th> Logradouro </th>
                                        <th> Número </th>
                                        <th> Complemento </th>
                                        <th> UF </th>
                                        <th> CEP </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Enderecos != null)
                                    {
                                        foreach (var item in Model.Enderecos)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="text-center">
                                                        <button type="button" class="btn btn-condensed btn-primary" data-toggle="tooltip" title="Editar cliente" onclick="EditarEndereco(@item.Identificador)"><i class="fa fa-pencil"></i></button>
                                                        <button type="button" class="btn btn-condensed btn-danger" data-toggle="tooltip" title="Excluir endereço" onclick="ConfirmarExcluir('Endereço', '', '', '/Home/ExcluirEndereco/?Identificador=@item.Identificador', 'Deseja excluir este registro?.', null, LoadLstEnderecos)"><i class="fa fa-trash"></i></button>
                                                    </div>

                                                </td>
                                                <td>@item.Logradouro</td>
                                                <td>@item.Numero</td>
                                                <td>@item.Complemento</td>
                                                <td>@item.UF</td>
                                                <td>@item.CEP</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab3">

                        <div class="row" id="addLoja">
                            <div class="col-md-4 col-md-offset-4">
                                @Html.DropDownList("IdLoja", new SelectList(ViewBag.LstLoja, "Value", "Text"), "Selecione uma opção", new { @class = "auto-complete" })
                            </div>
                            <div>
                            <button type="button" class="btn btn-md btn-success" onclick="IncluirLoja()"><i class="fa fa-plus"></i> Incluir</button>
                            </div>
                        </div>
                        <hr />
                        <div class="row" id="lstLojas">
                            <table class="table table-bordered table-striped table-condensed dataTable">
                                <thead>
                                    <tr>
                                        <th> Ações</th>
                                        <th> Loja</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Lojas != null)
                                    {

                                        foreach (var item in Model.Lojas)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="text-center">
                                                        <button type="button" class="btn btn-condensed btn-danger" data-toggle="tooltip" title="Excluir relacionameto loja" onclick="ConfirmarExcluir('Loja','','','/Home/ExcluirClienteLoja/?IdLoja=@item.Identificador&IdCliente=@Model.Identificador','Deseja remover esta loja?',null,LoadLstLojas)"><i class="fa fa-trash"></i></button>
                                                    </div>
                                                </td>
                                                <td>@item.Nome</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-md btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> Fechar</button>
        </div>
    </div>
</div>
<script>

    function IncluirLoja() {

        var IdLoja = $("#IdLoja").val();
        var IdCliente = $("#Cliente #Identificador").val();
        if (!(IdLoja > 0)) {
            Mensagem('warning', '', '', 'Favor informar a loja a ser incluida.');
            return false;
        }
        $.ajax({
            url: "/Home/IncluirClienteLoja",
            type: 'POST',
            data: { IdLoja, IdCliente },
            async: false,
            success: function (data) {
                if (data) {

                    Mensagem('success', '', '', 'Requisição realizada com sucesso.');

                    LoadLstLojas();
                }
                else {
                    Mensagem('error', '', '', data == false ? 'Não foi possivel realizar esta requisição. Favor verificar o formulario novamente.' : data);
                }
            }
        });
    }

    function LoadLstLojas() {
        $.get('/Home/EditarCliente/?Identificador=' + $("#Cliente #Identificador").val(), function (data) {

            $("#lstLojas").html($(data).find('#lstLojas'));

            var html = $($.parseHTML(data));

            $("#IdLoja").empty();
            $("#IdLoja").next('span').find('input').val('');
            $("#IdLoja").val('');

            $.each($(html).find("#IdLoja" + ' option'), function (i, _item) {
                $("#IdLoja").append(_item.outerHTML);
            });

        })
    }

    function LoadLstEnderecos() {
        CancelarEditarEndereco();
        $.get('/Home/EditarCliente/?Identificador=' + $("#Cliente #Identificador").val(), function (data) {
            $("#lstEnderecos").html($(data).find('#lstEnderecos'));
        })
    }
    function CancelarEditarEndereco() {
        $("#addEndereco").load('/Home/AdicionarEndereco');
    }
    function EditarEndereco(Id) {
        $("#addEndereco").load('/Home/EditarEndereco/?Identificador=' + Id)
    }
</script>
