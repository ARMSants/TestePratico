@using TestePraticoDesenvolvedorTrainee.Models
@{
    List<Cliente> clientes = ViewBag.ListarClientes ?? new List<Cliente>();
}

<table class="table table-bordered table-striped table-condensed dataTable">
    <thead>
        <tr>
            <th>Ações</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>RG</th>
            <th>Data Nascimento</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in clientes)
        {
            <tr>
                <td>
                    <div class="text-center">
                        <button type="button" class="btn btn-condensed btn-primary" data-toggle="tooltip" title="Configurações do cliente" onclick="OpenModal('modal','/Home/EditarCliente/?Identificador=@item.Identificador')"><i class="fa fa-cogs"></i></button>
                        <button type="button" class="btn btn-condensed btn-danger" data-toggle="tooltip" title="Excluir cliente" onclick="ConfirmarExcluir('Cliente','lstClientes','/Home/ListarClientes/','/Home/ExcluirCliente/?Identificador=@item.Identificador','Deseja excluir este registro?',null,null)"><i class="fa fa-trash"></i></button>
                    </div>
                </td>
                <td> @item.Nome </td>
                <td> @item.CPF </td>
                <td> @item.RG </td>
                <td> @item.DataNascimento.ToShortDateString() </td>
                <td> @(item.Ativo ? "Ativo" : "Inativo" ) </td>
            </tr>
        }
    </tbody>
</table>

